{
    "swagger": "2.0",
    "info": {
        "title": "Mala API",
        "description": "Mala API for app",
        "version": "1.2"
    },
    "host": "malalaoshi.com",
    "schemes": [
        "https"
    ],
    "basePath": "/api/v1",
    "produces": [
        "application/json"
    ],
    "paths": {
        "/study_report": {
            "get": {
                "summary": "Subjects Summary",
                "description": "Get the student all subjects summary info",
                "parameters": [
                    {
                        "name": "HTTP_AUTHORIZATION",
                        "in": "header",
                        "description": "auth token.",
                        "required": true,
                        "type": "string",
                        "format": "Token XXXXXXXX"
                    }
                ],
                "tags": [
                    "Subjects Summary"
                ],
                "responses": {
                    "200": {
                        "description": "An array of subjects those the user took or bought",
                        "schema": {
                            "type": "object",
                            "properties": {
                              "code": {
                                "type": "integer",
                                "description": "0 means ok. 见Error的code定义"
                              },
                              "message": {
                                "type": "string",
                                "description": "error message"
                              },
                              "results": {
                                "type": "array",
                                "items": {
                                  "$ref": "#/definitions/SimpleReportSummary"
                                }
                              }
                            }
                        }
                    },
                    "default": {
                        "description": "Unexpected error",
                        "schema": {
                            "$ref": "#/definitions/Error"
                        }
                    }
                }
            }
        },
        "/study_report/$subject_id": {
            "get": {
                "summary": "Subjects Summary",
                "description": "Get the student all subjects summary info",
                "parameters": [
                    {
                        "name": "HTTP_AUTHORIZATION",
                        "in": "header",
                        "description": "auth token.",
                        "required": true,
                        "type": "string",
                        "format": "Token XXXXXXXX"
                    }
                ],
                "tags": [
                    "One Subject Summary"
                ],
                "responses": {
                    "200": {
                        "description": "An array of subjects",
                        "schema": {
                            "type": "object",
                            "properties": {
                              "code": {
                                "type": "integer",
                                "description": "0 means ok. 见Error的code定义"
                              },
                              "message": {
                                "type": "string",
                                "description": "error message"
                              },
                              "results": {
                                "$ref": "#/definitions/SimpleReportSummary"
                              }
                            }
                        }
                    },
                    "default": {
                        "description": "Unexpected error",
                        "schema": {
                            "$ref": "#/definitions/Error"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "SimpleReportSummary": {
            "type": "object",
            "properties": {
                "subject_id": {
                    "type": "integer",
                    "description": "Subject ID.\n(Now only support math)"
                },
                "supported": {
                    "type": "boolean",
                    "description": "whether support the subject or not. if null then supported"
                },
                "total_nums": {
                    "type": "integer",
                    "description": "total number of exercises. 0 means no report.\n(Optional, if not supported, it's empty)"
                },
                "right_nums": {
                    "type": "integer",
                    "description": "number of exercises those were done correctly.\n(Optional, if not supported, it's empty)"
                }
            }
        },
        "Error": {
            "type": "object",
            "properties": {
                "code": {
                    "type": "integer",
                    "format": "int32",
                    "description": "0 means ok. \n  -1: 从快乐学获取数据失败\n  -4: 参数错误\n  -5: 不支持的科目"
                },
                "message": {
                    "type": "string",
                    "description": "error message"
                }
            }
        }
    }
}
