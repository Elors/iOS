<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_toolbar_height"
        android:gravity="center"
        android:text="报名成功"
        android:textColor="@color/text_color_darkgray"
        android:textSize="@dimen/dialog_title_size"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/page_padding"
        android:paddingTop="@dimen/page_padding_inner"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/avatar_view"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginLeft="@dimen/page_padding_inner"
            android:scaleType="centerInside"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/page_padding_inner"
            android:paddingRight="@dimen/page_padding_inner"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="客服稍后会电话联系您哦"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="上课时间："/>

                <TextView
                    android:id="@+id/course_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="2015-12-12\n10:30-12:30"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_view_schedule"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_bottom_bar_height"
        android:background="@android:color/transparent"
        android:text="去看我的课表"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/dialog_title_size"/>
</LinearLayout>