<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <com.malalaoshi.android.core.view.TitleBarView
        android:id="@+id/tbv_member_title"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/colorWhite"
        app:cusLeftBackgroud="@drawable/core__back_btn"
        app:cusLeftShow="true"
        app:cusRightShow="false"
        app:cusTitleText="会员服务"
        app:cusTitleTextColor="@color/title_bar_text_color"
        app:cusTitleTextSize="@dimen/text_size_xlarge"
        />
    <View
        android:id="@+id/view_line"
        android:layout_below="@+id/tbv_member_title"
        android:layout_width="match_parent"
        android:background="@color/line_color"
        android:layout_height="0.5dp"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_member"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/view_line"></android.support.v4.view.ViewPager>

    <com.malalaoshi.android.view.Indicator.RubberIndicator
        android:id="@+id/ri_member_rubber"
        android:layout_width="100dp"
        android:layout_height="10dp"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        app:smallCircleColor="#c7deee"
        app:largeCircleColor="#8fbcdd"
        ></com.malalaoshi.android.view.Indicator.RubberIndicator>
</RelativeLayout>
