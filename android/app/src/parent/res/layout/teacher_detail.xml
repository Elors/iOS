<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<android.support.design.widget.CoordinatorLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <android.support.design.widget.AppBarLayout
        android:id="@+id/parent_teacher_detail_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:elevation="@dimen/elevation_normal">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/parent_teacher_detail_collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:contentScrim="@color/colorPrimary"
            app:expandedTitleMarginStart="48dp"
            app:expandedTitleMarginEnd="64dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/user_detail_header_bg"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                app:layout_collapseMode="parallax" />

            <android.support.v7.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin" />

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/nestedscrollview_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        >
        <include layout="@layout/teacher_detail_body" />

    </android.support.v4.widget.NestedScrollView>

    <com.malalaoshi.android.view.CircleImageView
        android:id="@+id/parent_teacher_detail_head_portrait"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        android:src="@drawable/user_detail_header_bg"
        app:border_width="2dp"
        app:border_color="@color/color_accent"
        android:layout_margin="16dp"
        app:layout_anchor="@+id/parent_teacher_detail_appbar"
        app:layout_anchorGravity="bottom|left|end"
        app:borderWidth="0dp"
        app:backgroundTint="@color/blue_light"
        />
    <!-- <android.support.design.widget.FloatingActionButton
         android:id="@+id/parent_teacher_detail_fab"
         android:layout_height="wrap_content"
         android:layout_width="wrap_content"
         android:layout_margin="16dp"
         app:layout_anchor="@+id/parent_teacher_detail_appbar"
         app:layout_anchorGravity="bottom|right|end" />-->

    <android.support.v7.widget.Toolbar
        android:id="@+id/parent_teacher_detail_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#01000000"
        android:elevation="16dp"
        android:padding="0dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:title="@string/nav_bar_back"
        app:layout_collapseMode="pin" />

</android.support.design.widget.CoordinatorLayout>

    <Button
        android:layout_gravity="bottom|left"
        android:id="@+id/parent_teacher_signup_btn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#95A8B9"
        android:padding="8dp"
        android:text="@string/sign_up"
        android:gravity="center"
        android:textColor="?android:attr/textColorSecondary"
        android:textSize="14sp"
         />
</FrameLayout>