<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.malalaoshi.android.view.ObservableScrollView
        android:id="@+id/scroll_view"
        android:scrollbars="none"
        android:background="@color/backgrounp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/header_image_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_teacher_bk"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/bg_teacher_height"
                    android:layout_centerInParent="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/core__teacher_banner" />
            </RelativeLayout>


            <include layout="@layout/teacher_info_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-35dp"
                android:layout_below="@id/header_image_view"
                />
        </RelativeLayout>

    </com.malalaoshi.android.view.ObservableScrollView>
    <com.malalaoshi.android.core.view.TitleBarView
        android:id="@+id/titleBar"
        app:cusTitleTextSize="@dimen/text_size_xlarge"
        app:cusTitleTextColor="@color/title_bar_text_color"
        app:cusLeftShow="true"
        app:cusLeftBackgroud="@drawable/core__white_btn"
        app:cusRightShow="false"
        android:background="@color/alpheWhite"
        android:layout_width="match_parent"
        android:layout_height="44dp"/>
    <View
        android:layout_marginTop="44dp"
        android:id="@+id/view_line"
        android:alpha="0"
        android:layout_width="match_parent"
        android:background="@color/line_color"
        android:layout_height="0.5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left"
        android:alpha="0.96"
        android:background="@color/backgrounp"
        android:orientation="vertical">
        <View
            android:id="@+id/view_line_bottom"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:alpha="0.25"
            android:background="@color/colorBlack" />
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/btn_collect"
            android:layout_width="0dp"
            android:layout_weight="27"
            android:layout_height="49dp"
            android:visibility="gone"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:background="@color/white"
            android:drawableTop="@drawable/ic_uncollect"
            android:drawablePadding="1dp"
            android:text="收藏"
            android:gravity="center"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_small" />
        <TextView
            android:id="@+id/parent_teacher_signup_btn"
            android:layout_width="0dp"
            android:layout_weight="37"
            android:layout_height="49dp"
            android:background="@drawable/bg_blue_rectangle_btn"
            android:enabled="false"
            android:gravity="center"
            android:text="@string/sign_up_immediately"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_xlarge" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>