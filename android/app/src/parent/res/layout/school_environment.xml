<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/AppWidget.listLayout">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/teacher_body_prices_padding_bottom"
        android:text="@string/teaching_environment"
        android:textColor="@color/teacher_title_text_color"
        android:textSize="@dimen/text_size_large_x" />

    <com.malalaoshi.android.view.ScrollListView
        android:id="@+id/listview_school"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/list_divider_color"
        android:dividerHeight="@dimen/list_divider"
        android:listSelector="#00000000">

    </com.malalaoshi.android.view.ScrollListView>

    <LinearLayout
        android:id="@+id/ll_school_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            style="@style/AppWidget.ItemDivider"
            android:background="@color/list_divider_color"
            android:layout_height="@dimen/list_divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/teacher_body_padding_bottom_normal"
            android:paddingTop="@dimen/teacher_body_padding_top_normal">

            <TextView
                android:id="@+id/tv_school_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="其他社区中心"
                android:textColor="@color/item_text_color_normal"
                android:textSize="@dimen/text_size_large" />

            <ImageView
                android:id="@+id/iv_school_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_list_down" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>