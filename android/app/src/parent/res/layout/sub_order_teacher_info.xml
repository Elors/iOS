<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:background="@color/white"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="12dp"
        android:paddingLeft="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_teacher_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_teacher"
            android:drawablePadding="10dp"
            android:layout_marginBottom="9dp"
            android:gravity="center"
            android:textSize="@dimen/text_size_normal_x"
            android:textColor="@color/text_color_home_price_unit"
            android:text="李小龙" />

        <TextView
            android:id="@+id/tv_course_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_teacher_name"
            android:drawableLeft="@drawable/ic_course"
            android:drawablePadding="10dp"
            android:layout_marginBottom="9dp"
            android:gravity="center"
            android:textSize="@dimen/text_size_normal_x"
            android:textColor="@color/text_color_home_price_unit"
            android:text="初一数学" />

        <TextView
            android:id="@+id/tv_school"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_course_name"
            android:drawableLeft="@drawable/ic_address"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:textSize="@dimen/text_size_normal_x"
            android:textColor="@color/text_color_home_price_unit"
            android:text="洛阳市麻辣社区中心(黄河店)" />

        <com.malalaoshi.android.view.CircleNetworkImage
            android:id="@+id/iv_teacher_avator"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_alignParentRight="true" />
    </RelativeLayout>
</merge>