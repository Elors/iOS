<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_height="44dp" >
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_home_title_tab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_title_tab_teacher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:src="@drawable/home_find_teacher_bg" />

        <ImageView
            android:id="@+id/iv_title_tab_timetable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:src="@drawable/home_course_bg" />

        <ImageView
            android:id="@+id/iv_title_tab_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:src="@drawable/home_usercenter_bg" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="麻辣老师"
        android:textColor="#6c6c6c"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_title_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="12dp"
        android:drawableLeft="@drawable/home_location_bg"
        android:gravity="center"
        android:text="洛阳"
        android:textColor="#6c6c6c"
        android:textSize="16sp" />
</RelativeLayout>