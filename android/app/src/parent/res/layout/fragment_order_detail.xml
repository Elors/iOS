<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        >
        <LinearLayout
            android:background="@color/background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:background="@color/white"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="订单状态"
                    android:textSize="@dimen/text_size_normal_x"
                    android:textColor="@color/text_color_home_price_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_order_status"
                    android:textColor="#e36a5c"
                    android:textSize="@dimen/text_size_normal_x"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>
            <View
                android:background="@color/line_bg"
                android:layout_width="match_parent"
                android:layout_height="1px"/>
            <include layout="@layout/sub_order_teacher_info"
                android:id="@+id/sub_order_teacher_info"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@color/background" />
           <include layout="@layout/sub_order_class_time"
                android:id="@+id/sub_class_time" />
            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@color/background" />
            <RelativeLayout
                android:id="@+id/rl_pay_way"
                android:visibility="gone"
                android:background="@color/white"
                android:paddingBottom="16dp"
                android:paddingTop="16dp"
                android:paddingRight="12dp"
                android:paddingLeft="12dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="支付方式"
                    android:textColor="@color/text_color_darkgray"
                    android:textSize="@dimen/text_size_large_x"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_pay_way"
                    android:textColor="@color/text_color_home_price_unit"
                    android:textSize="@dimen/text_size_normal_x"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <View
                android:id="@+id/view_line_pay_way"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@color/background" />
            <include layout="@layout/sub_order_time_info"
                android:id="@+id/sub_order_time_info" />
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/rl_operation"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:background="#fff">

        <View
            android:id="@+id/view_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_color" />

        <TextView
            android:id="@+id/tv_mount_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="5dp"
            android:text="合计:"
            android:textColor="#333"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/tv_cost_unit"
            android:text="¥"
            android:textColor="@color/theme_red_96"
            android:textSize="13sp"
            android:layout_toRightOf="@id/tv_mount_label"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_mount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="6dp"
            android:layout_toRightOf="@+id/tv_cost_unit"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/theme_red_96"
            android:textSize="13sp" />
        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="75dp"
            android:layout_height="27dp"
            android:layout_toLeftOf="@+id/tv_submit"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/bg_cancel_order_btn"
            android:gravity="center"
            android:textColor="@color/text_color_dlg"
            android:text="取消订单"
            android:textSize="@dimen/text_size_normal" />
        <TextView
            android:id="@+id/tv_submit"
            android:layout_width="75dp"
            android:layout_height="27dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:background="@drawable/btn_confirm"
            android:gravity="center"
            android:text="提交订单"
            android:textColor="#fff"
            android:textSize="@dimen/text_size_normal" />
    </RelativeLayout>
</FrameLayout>