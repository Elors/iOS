<?xml version="1.0" encoding="utf-8"?>
<com.malalaoshi.android.view.BBGARefreshLayoutExt
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/teacher_list_refresh_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingTop="0dp"
    >

    <com.malalaoshi.android.RecyclerViewEvent
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/teacher_list_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:scrollbarStyle="outsideOverlay"
        android:paddingLeft="@dimen/teacher_list_card_diver"
        android:paddingRight="@dimen/teacher_list_card_diver"
        android:background="#FFFFFF"
        android:scrollbarSize="1dp"
    />

</com.malalaoshi.android.view.BBGARefreshLayoutExt>
