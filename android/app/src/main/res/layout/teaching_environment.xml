<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ll_teaching_environment"
    >
    <TextView
        android:text="@string/teaching_environment"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_teaching_environment"
            android:padding="10dp"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_sync_black_24dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_experience_center"
                android:text="麻辣体验中心 (洛阳店)"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="40dp" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_below="@id/tv_experience_center"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <TextView
                    android:id="@+id/tv_experience_center_address"
                    android:text="洞西区 长江路"
                    android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
                <TextView
                    android:id="@+id/tv_experience_center_distance"
                    android:text="10km"
                    android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="8dp" />

    <LinearLayout
        android:id="@+id/ll_training_center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_training_center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:drawableRight="@drawable/ic_sync_black_24dp"
            android:padding="10dp"
            android:text="离你最近的学习中心的距离是10km"
            android:layout_marginBottom="1dp"/>
        <ListView
            android:id="@+id/lv_training_center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:numColumns="1"
            android:verticalSpacing="1dp"
            android:visibility="gone"></ListView>

    </LinearLayout>
</LinearLayout>