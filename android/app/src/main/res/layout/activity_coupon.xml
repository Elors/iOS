<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/teacher_main_bg"
    android:orientation="vertical">

    <com.malalaoshi.android.core.view.TitleBarView
        android:id="@+id/title_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:cusLeftBackgroud="@drawable/core__back_btn"
        app:cusLeftShow="true"
        app:cusRightShow="true"
        app:cusRightTextSize="@dimen/text_size_normal_x"
        app:cusRightTextColor="#7d7d7d"
        app:cusRightText="使用规则"
        app:cusTitleText="@string/scholarship"
        app:cusTitleTextColor="@color/title_bar_text_color"
        app:cusTitleTextSize="@dimen/text_size_xlarge"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#b4b4b4" />

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>