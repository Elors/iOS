<resources>

    <style name="ClubToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">0dp</item>
    </style>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="selectableItemBackgroundGeneral">
            @drawable/selectable_item_background_general_light
        </item>
        <item name="toolbarStyle">@style/ClubToolbar</item>
        <item name="android:listDivider">@drawable/dividerdecoration</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoTitle">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppWidget" parent="Theme.AppCompat.Light" />

    <style name="AppWidget.ShadowGap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/elevation_normal</item>
        <item name="android:layout_marginBottom">@dimen/shadow_gap_margin_fill</item>
        <item name="android:background">@drawable/gap_shadow</item>
    </style>

    <style name="AppWidget.DeepLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="mala.widget.usercenter.title.text" parent="android:Widget.TextView">
        <item name="android:textColor">#333</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="mala.widget.usercenter.warn.text" parent="android:Widget.TextView">
        <item name="android:textColor">#e26254</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="mala.widget.usercenter.button" parent="android:Widget.Button">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/btn_post_verify_code_bk</item>
    </style>

    <style name="mala.widget.usercenter.edit" parent="android:Widget.EditText">
        <item name="android:textColor">#6c6c6c</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColorHint">#cecece</item>
    </style>

</resources>
